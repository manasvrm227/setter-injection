<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  

<bean id="address" class="com.shrinkme.bean.AddressBean">
<property name="city"><value>SAS Nagar</value></property>
<property name="state"><value>Punjab</value></property>
</bean>      

<bean id="employee" class="com.shrinkme.bean.EmployeeBean">
<property name="id"><value>1</value></property>
<property name="name"><value>Mann</value> </property>
<property name = "addressBean" ref="address"/>
</bean>       
               
</beans>